<% content_for :title, "Property Address" %>

<div class="max-w-2xl mx-auto bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h1 class="text-2xl font-bold mb-6">Property Address</h1>

    <%= form_with(model: @parcel, url: update_address_parcel_wizard_path(id: @parcel.id), method: :patch, class: "space-y-4") do |f| %>
      <% if @parcel.errors.any? %>
        <div class="bg-red-50 p-4 rounded-md">
          <ul class="list-disc list-inside text-red-700">
            <% @parcel.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if @parcel.errors[:address].any?}" %>
        <% if @parcel.errors[:address].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @parcel.errors[:address].join(", ") %></p>
        <% end %>
      </div>

      <div>
        <%= f.label :city, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :city, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if @parcel.errors[:city].any?}" %>
        <% if @parcel.errors[:city].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @parcel.errors[:city].join(", ") %></p>
        <% end %>
      </div>

      <div>
        <%= f.label :state, class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :state, us_states_options, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if @parcel.errors[:state].any?}" %>
        <% if @parcel.errors[:state].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @parcel.errors[:state].join(", ") %></p>
        <% end %>
      </div>

      <div>
        <%= f.label :zip_code, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :zip_code, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if @parcel.errors[:zip_code].any?}" %>
        <% if @parcel.errors[:zip_code].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @parcel.errors[:zip_code].join(", ") %></p>
        <% end %>
      </div>

      <div class="flex justify-between pt-4">
        <%= link_to "Cancel", parcels_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        <%= f.submit "Next", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div> 