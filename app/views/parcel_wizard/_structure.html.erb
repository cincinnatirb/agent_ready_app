<li id="<%= dom_id(structure) %>" class="<%= cycle('bg-white', 'bg-gray-50') %> px-4 py-4 sm:px-6">
  <div class="flex items-center justify-between">
    <div class="flex-1 min-w-0">
      <p class="text-sm font-medium text-blue-600 truncate">
        <%= structure.nickname.presence || "Unnamed Structure" %>
      </p>
      <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
        <% if structure.building_type.present? %>
          <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 0h8v12H6V4z" clip-rule="evenodd" />
            </svg>
            <%= structure.building_type.titleize %>
          </div>
        <% end %>
        <% if structure.length.present? && structure.width.present? %>
          <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 0h8v12H6V4z" clip-rule="evenodd" />
            </svg>
            <%= structure.length %>' Ã— <%= structure.width %>' (<%= structure.length * structure.width %> sq ft)
          </div>
        <% end %>
      </div>
    </div>
    <div class="ml-4 flex-shrink-0 flex space-x-2">
      <%= link_to edit_parcel_structure_path(@parcel, structure), 
          class: "text-blue-600 hover:text-blue-900",
          data: { turbo_frame: "new_structure" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
      <%= button_to parcel_structure_path(@parcel, structure), 
          method: :delete,
          class: "text-red-600 hover:text-red-900",
          form: { data: { turbo_confirm: "Are you sure you want to remove this structure?" } } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>
  </div>
</li> 