<% content_for :title, "Structures" %>

<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <h1 class="text-2xl font-semibold text-gray-900">Structures</h1>
    
    <div class="mt-6">
      <ul id="structures" class="divide-y divide-gray-200">
        <%= render partial: "structure", collection: @structures %>
      </ul>
    </div>

    <%= turbo_frame_tag "new_structure" do %>
      <%= render "add_structure_button" %>
    <% end %>
  </div>
</div>

<div class="mt-6 flex justify-between">
  <%= link_to "Back", address_parcel_wizard_path(id: @parcel), 
      class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
  <%= link_to "Next", parcels_path, 
      class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
</div> 