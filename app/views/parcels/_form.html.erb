<%= form_with(model: parcel, class: "space-y-4") do |f| %>
  <% if parcel.errors.any? %>
    <div class="bg-red-50 p-4 rounded-md">
      <ul class="list-disc list-inside text-red-700">
        <% parcel.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-3 gap-4">
    <%= f.label :street1, "Street Address", class: "text-sm font-medium text-gray-700 text-right self-center col-span-1" %>
    <div class="col-span-2">
      <%= f.text_field :street1, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if parcel.errors[:street1].any?}" %>
      <% if parcel.errors[:street1].any? %>
        <p class="mt-1 text-sm text-red-600"><%= parcel.errors[:street1].join(", ") %></p>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <%= f.label :street2, "Apartment, suite, etc.", class: "text-sm font-medium text-gray-700 text-right self-center col-span-1" %>
    <div class="col-span-2">
      <%= f.text_field :street2, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if parcel.errors[:street2].any?}" %>
      <% if parcel.errors[:street2].any? %>
        <p class="mt-1 text-sm text-red-600"><%= parcel.errors[:street2].join(", ") %></p>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <%= f.label :city, class: "text-sm font-medium text-gray-700 text-right self-center col-span-1" %>
    <div class="col-span-2">
      <%= f.text_field :city, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if parcel.errors[:city].any?}" %>
      <% if parcel.errors[:city].any? %>
        <p class="mt-1 text-sm text-red-600"><%= parcel.errors[:city].join(", ") %></p>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <%= f.label :state, class: "text-sm font-medium text-gray-700 text-right self-center col-span-1" %>
    <div class="col-span-2">
      <%= f.select :state, us_states_options, {}, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if parcel.errors[:state].any?}" %>
      <% if parcel.errors[:state].any? %>
        <p class="mt-1 text-sm text-red-600"><%= parcel.errors[:state].join(", ") %></p>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <%= f.label :zip_code, "Zip code", class: "text-sm font-medium text-gray-700 text-right self-center col-span-1" %>
    <div class="col-span-2">
      <%= f.text_field :zip_code, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-300' if parcel.errors[:zip_code].any?}" %>
      <% if parcel.errors[:zip_code].any? %>
        <p class="mt-1 text-sm text-red-600"><%= parcel.errors[:zip_code].join(", ") %></p>
      <% end %>
    </div>
  </div>

  <%= hidden_field_tag :next_step, 'structures' %>

  <div class="flex justify-between pt-4">
    <%= link_to "Back", parcels_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit "Next", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
