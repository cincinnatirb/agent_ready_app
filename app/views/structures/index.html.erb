<% content_for :title, "Structures" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center py-6">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Structures</h1>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "Add Structure", new_parcel_structure_path(@parcel), 
          class: "rounded-md bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700",
          data: { turbo_frame: "structure_form" } %>
    </div>
  </div>

  <div class="mt-8">
    <ul id="structures" class="divide-y divide-gray-200">
      <%= render partial: "structures/structure", collection: @structures %>
    </ul>
  </div>

  <%= turbo_frame_tag "structure_form" %>

  <div class="mt-6 flex justify-between">
    <%= link_to "Back", edit_parcel_path(@parcel), 
        class: "rounded-md px-4 py-2 text-sm font-medium text-gray-700" %>
    <%= link_to "Next", review_parcel_path(@parcel), 
        class: "rounded-md bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700" %>
  </div>
</div>
