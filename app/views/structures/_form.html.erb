<%= form_with(model: structure, class: "contents") do |form| %>
  <% if structure.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(structure.errors.count, "error") %> prohibited this structure from being saved:</h2>

      <ul class="list-disc ml-6">
        <% structure.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :nickname %>
    <%= form.text_field :nickname, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": structure.errors[:nickname].none?, "border-red-400 focus:outline-red-600": structure.errors[:nickname].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :building_type %>
    <%= form.text_field :building_type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": structure.errors[:building_type].none?, "border-red-400 focus:outline-red-600": structure.errors[:building_type].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :length %>
    <%= form.number_field :length, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": structure.errors[:length].none?, "border-red-400 focus:outline-red-600": structure.errors[:length].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :width %>
    <%= form.number_field :width, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": structure.errors[:width].none?, "border-red-400 focus:outline-red-600": structure.errors[:width].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :parcel_id %>
    <%= form.text_field :parcel_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": structure.errors[:parcel_id].none?, "border-red-400 focus:outline-red-600": structure.errors[:parcel_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
