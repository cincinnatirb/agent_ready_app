<li id="<%= dom_id(structure) %>" class="<%= cycle('bg-white', 'bg-gray-50') %> px-4 py-4">
  <div class="flex items-center justify-between">
    <div>
      <p class="font-medium"><%= structure.nickname.presence || "Unnamed Structure" %></p>
      <p class="text-sm text-gray-500">
        <%= structure.building_type.titleize %> •
        <%= structure.length %>' × <%= structure.width %>' (<%= structure.length * structure.width %> sq ft)
      </p>
    </div>
    <div class="flex space-x-4">
      <%= link_to "Edit", edit_parcel_structure_path(@parcel, structure), 
          class: "text-blue-600 hover:text-blue-900",
          data: { turbo_frame: "structure_form" } %>
      <%= button_to "Delete", parcel_structure_path(@parcel, structure), 
          method: :delete,
          class: "text-red-600 hover:text-red-900",
          form: { 
            data: { 
              turbo_confirm: "Are you sure you want to remove this structure?",
              turbo_stream: true
            } 
          } %>
    </div>
  </div>
</li>
