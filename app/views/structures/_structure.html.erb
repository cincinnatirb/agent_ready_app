<li id="<%= dom_id(structure) %>" class="<%= cycle('bg-white', 'bg-gray-50') %> first:rounded-t-md last:rounded-b-md px-4 py-4">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-2 text-gray-700">
      <span class="font-medium"><%= structure.nickname.presence || structure.building_type.titleize %></span>
      <span class="text-gray-500">•</span>
      <span><%= structure.building_type.titleize %></span>
      <span class="text-gray-500">•</span>
      <span><%= structure.length %>' × <%= structure.width %>' (<%= structure.length * structure.width %> sq ft)</span>
    </div>
    <div class="flex items-center">
      <%= link_to "Edit", edit_parcel_structure_path(@parcel, structure), 
          class: "text-blue-600 hover:text-blue-900",
          data: { turbo_frame: "structure_form" } %>
      <%= button_to "Delete", parcel_structure_path(@parcel, structure), 
          method: :delete,
          class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer",
          form: { 
            class: "ml-4",
            data: { 
              turbo_confirm: "Are you sure you want to remove this structure?",
              turbo_stream: true
            }
          } %>
    </div>
  </div>
</li>
